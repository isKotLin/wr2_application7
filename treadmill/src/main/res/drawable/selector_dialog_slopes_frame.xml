<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="@dimen/my15dp"/>
            <solid android:color="@color/slopes_frame"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/my110dp"/>
            <stroke android:width="@dimen/my5dp" android:color="@color/slopes_frame"/>
        </shape>
    </item>
</selector>