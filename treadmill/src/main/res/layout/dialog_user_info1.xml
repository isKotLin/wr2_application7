<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/my5dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/userInfo_iv_icon"
        android:layout_width="@dimen/my50dp"
        android:layout_height="@dimen/my50dp"
        android:layout_margin="@dimen/my5dp"
        android:layout_marginRight="@dimen/my25dp"
        android:src="@mipmap/avatar1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_map"
        android:textColor="@android:color/white"
        android:textSize="@dimen/my34dp" />
</LinearLayout>
