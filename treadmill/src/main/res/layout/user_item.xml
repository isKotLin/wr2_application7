<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/my2dp">

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/my10dp"
        android:text="@string/date"
        android:textColor="@android:color/white"
        android:textSize="@dimen/my22dp" />

    <TextView
        android:id="@+id/user_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/date_tv"
        android:text="2011/01/07"
        android:textColor="@android:color/white"
        android:textSize="@dimen/my22dp" />

    <ImageView
        android:id="@+id/user_iv_clean"
        android:layout_width="@dimen/my60dp"
        android:layout_height="@dimen/my70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/my10dp"
        android:clickable="true"
        android:src="@drawable/selector_trash_press" />

    <LinearLayout
        android:layout_width="@dimen/my800dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_tv"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my10dp"
                android:text="@string/times"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my22dp" />

            <TextView
                android:id="@+id/user_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00:00"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mileage_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my50dp"
                android:text="@string/mileages"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my22dp" />

            <TextView
                android:id="@+id/user_tv_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my22dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="km"
                android:textSize="@dimen/my22dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/heat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my10dp"
                android:text="@string/heats"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my22dp" />

            <TextView
                android:id="@+id/user_tv_heat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my22dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="kcal"
                android:textSize="@dimen/my22dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>