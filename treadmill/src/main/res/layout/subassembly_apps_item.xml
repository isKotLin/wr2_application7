<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/my4dp">

    <com.example.view.MyLinearLayout
        android:id="@+id/app_ll_item"
        android:layout_width="@dimen/my250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/my25dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/apps_iv"
            android:layout_width="@dimen/my40dp"
            android:layout_height="@dimen/my40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/my10dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/apps_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my28dp" />
    </com.example.view.MyLinearLayout>
</LinearLayout>