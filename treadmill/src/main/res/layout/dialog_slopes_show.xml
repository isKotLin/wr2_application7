<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/speed_tv_sign"
        android:layout_width="@dimen/my400dp"
        android:layout_height="wrap_content"
        android:background="@color/slopes_frame"
        android:gravity="center"
        android:paddingBottom="@dimen/my20dp"
        android:paddingTop="@dimen/my20dp"
        android:text="@string/param_slope"
        android:textColor="@android:color/white"
        android:textSize="@dimen/my50dp" />

    <LinearLayout
        android:id="@+id/speed_ll_sign"
        android:layout_width="@dimen/my400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/speed_tv_sign"
        android:background="@color/user_character"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/slopes_tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/my10dp"
            android:layout_marginTop="@dimen/my10dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my80dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/my400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/speed_ll_sign"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/slopes_ll_sub"
            android:layout_width="0dp"
            android:layout_height="@dimen/my100dp"
            android:layout_weight="1"
            android:background="@drawable/selector_slopes_btn"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/my80dp"
                android:layout_height="@dimen/my80dp"
                android:src="@mipmap/ic_sub_white" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/my1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/slopes_ll_add"
            android:layout_width="0dp"
            android:layout_height="@dimen/my100dp"
            android:layout_weight="1"
            android:background="@drawable/selector_slopes_btn"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/my80dp"
                android:layout_height="@dimen/my80dp"
                android:src="@mipmap/ic_add_min" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>