<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/my65dp">

    <com.example.view.MyLinearLayout
        android:id="@+id/fragment_main_ll_run"
        android:layout_width="@dimen/my300dp"
        android:layout_height="@dimen/my450dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">
        <!--android:background="@mipmap/bg_home_running"-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/my16dp"
            android:src="@mipmap/running" />
        <!--android:text="@string/shortcut_run"-->
        <TextView
            android:id="@+id/run_tv_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my30dp" />
    </com.example.view.MyLinearLayout>

    <com.example.view.MyLinearLayout
        android:id="@+id/fragment_main_ll_media"
        android:layout_width="@dimen/my450dp"
        android:layout_height="@dimen/my220dp"
        android:layout_marginRight="@dimen/my10dp"
        android:layout_toLeftOf="@id/fragment_main_ll_run"
        android:background="@mipmap/bg_home_media"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/my100dp"
            android:layout_height="@dimen/my100dp"
            android:src="@mipmap/movie" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shortcut_movie"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my30dp" />
    </com.example.view.MyLinearLayout>

        <com.example.view.MyLinearLayout
            android:id="@+id/fragment_main_ll_scene"
            android:layout_width="@dimen/my220dp"
            android:layout_height="@dimen/my220dp"
            android:background="@mipmap/bg_home_scene"
            android:layout_alignLeft="@id/fragment_main_ll_media"
            android:layout_below="@id/fragment_main_ll_media"
            android:layout_marginTop="@dimen/my10dp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/my80dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my10dp"
                android:src="@mipmap/location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shortcut_scene"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my30dp" />
        </com.example.view.MyLinearLayout>

        <com.example.view.MyLinearLayout
            android:id="@+id/fragment_main_ll_apps"
            android:layout_width="@dimen/my220dp"
            android:layout_height="@dimen/my220dp"
            android:layout_marginLeft="@dimen/my10dp"
            android:layout_alignRight="@id/fragment_main_ll_media"
            android:layout_below="@id/fragment_main_ll_media"
            android:layout_marginTop="@dimen/my10dp"
            android:background="@mipmap/bg_home_apps"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/my80dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my20dp"
                android:src="@mipmap/hospital" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shortcut_apps"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my30dp" />
        </com.example.view.MyLinearLayout>

    <com.example.view.MyLinearLayout
        android:id="@+id/fragment_main_ll_user"
        android:layout_width="@dimen/my220dp"
        android:layout_height="@dimen/my220dp"
        android:layout_marginLeft="@dimen/my10dp"
        android:layout_toRightOf="@id/fragment_main_ll_run"
        android:background="@mipmap/bg_home_user"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/my90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/my10dp"
            android:src="@mipmap/persons" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my30dp" />
    </com.example.view.MyLinearLayout>

    <com.example.view.MyLinearLayout
        android:id="@+id/fragment_main_ll_setting"
        android:layout_width="@dimen/my220dp"
        android:layout_height="@dimen/my220dp"
        android:layout_below="@id/fragment_main_ll_user"
        android:layout_marginLeft="@dimen/my10dp"
        android:layout_marginTop="@dimen/my10dp"
        android:layout_toRightOf="@id/fragment_main_ll_run"
        android:background="@mipmap/bg_home_setting"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/my70dp"
            android:layout_height="@dimen/my70dp"
            android:layout_marginBottom="@dimen/my24dp"
            android:src="@mipmap/cog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shortcut_settings"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my30dp" />
    </com.example.view.MyLinearLayout>
</RelativeLayout>