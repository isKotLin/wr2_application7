<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/my60dp"
    android:background="@color/translucence">

    <ImageView
        android:id="@+id/home_iv_userIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/title_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/my40dp" />

    <ImageView
        android:id="@+id/title_iv_back"
        android:layout_width="@dimen/my35dp"
        android:layout_height="@dimen/my35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/my5dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/title_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/title_iv_back"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/my10dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/my30dp" />
</RelativeLayout>