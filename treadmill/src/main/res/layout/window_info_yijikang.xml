        <LinearLayout
            android:id="@+id/speed_ll"
            android:layout_width="0dp"
            android:layout_height="@dimen/my135dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/my36dp"
                    android:layout_height="@dimen/my36dp"
                    android:src="@mipmap/gaugage" />

                <TextView
                    android:id="@+id/sign_speeds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my10dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/my30dp" />
            </LinearLayout>

            <com.example.view.CustomFontTextView
                android:id="@+id/window_tv_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.0 "
                android:textColor="@android:color/white"
                android:textSize="@dimen/my75dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/slopes_ll"
            android:layout_width="0dp"
            android:layout_height="@dimen/my135dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/my36dp"
                    android:layout_height="@dimen/my36dp"
                    android:src="@mipmap/safety" />

                <TextView
                    android:id="@+id/sign_slopess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my10dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/my30dp" />
            </LinearLayout>

            <com.example.view.CustomFontTextView
                android:id="@+id/window_tv_gradient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my75dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_ll"
            android:layout_width="0dp"
            android:layout_height="@dimen/my135dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/my36dp"
                    android:layout_height="@dimen/my36dp"
                    android:src="@mipmap/timer" />

                <TextView
                    android:id="@+id/sign_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my10dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/my30dp" />
            </LinearLayout>

            <com.example.view.CustomFontTextView
                android:id="@+id/window_chr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="00:00:00"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my75dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mileage_ll"
            android:layout_width="0dp"
            android:layout_height="@dimen/my135dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/my36dp"
                    android:layout_height="@dimen/my36dp"
                    android:src="@mipmap/distance" />

                <TextView
                    android:id="@+id/sign_mileages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my10dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/my30dp" />
            </LinearLayout>

            <com.example.view.CustomFontTextView
                android:id="@+id/window_tv_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my75dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/heat_ll"
            android:layout_width="0dp"
            android:layout_height="@dimen/my135dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/my36dp"
                    android:layout_height="@dimen/my36dp"
                    android:src="@mipmap/fire" />

                <TextView
                    android:id="@+id/sign_heats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my10dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/my30dp" />
            </LinearLayout>

            <com.example.view.CustomFontTextView
                android:id="@+id/window_tv_heat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000.0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my75dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/heart_ll"
            android:layout_width="0dp"
            android:layout_height="@dimen/my135dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/my36dp"
                    android:layout_height="@dimen/my36dp"
                    android:src="@mipmap/heart_signal" />

                <TextView
                    android:id="@+id/sign_hearts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my10dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/my30dp" />
            </LinearLayout>

            <com.example.view.CustomFontTextView
                android:id="@+id/window_tv_heartRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my75dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/end_ll"
            android:layout_width="@dimen/my140dp"
            android:layout_height="@dimen/my135dp"
            android:clickable="true"
            android:background="@drawable/selector_adjust_end"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/my36dp"
                android:layout_height="@dimen/my36dp"
                android:layout_marginBottom="@dimen/my10dp"
                android:src="@mipmap/e7" />

            <TextView
                android:id="@+id/window_tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束"
                android:textColor="#FF0115"
                android:textSize="@dimen/my40dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>